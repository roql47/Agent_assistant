<ui:FluentWindow x:Class="AgentAssistant.BoardDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="게시글 상세보기" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 헤더 -->
        <Border Grid.Row="0" 
                Background="#6C5CE7" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="📄 게시글 상세보기" 
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock x:Name="PostNumberText"
                               Text="게시글 번호"
                               FontSize="12"
                               Foreground="#E0E0E0"
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Content="📋 복사"
                        Background="#5F4FD1"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,8"
                        FontSize="13"
                        Cursor="Hand"
                        Click="CopyContent_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4F3FC1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- 본문 영역 -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="20">
            <StackPanel>
                <!-- 제목 -->
                <Border Background="White" 
                        CornerRadius="8"
                        Padding="20" 
                        Margin="0,0,0,15"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="제목" 
                                   FontSize="12"
                                   Foreground="#6C757D"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="TitleText" 
                                 FontSize="18"
                                 FontWeight="Bold"
                                 Foreground="#2D3436"
                                 TextWrapping="Wrap"
                                 IsReadOnly="True"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Cursor="IBeam"/>
                    </StackPanel>
                </Border>
                
                <!-- 게시글 정보 -->
                <Border Background="White" 
                        CornerRadius="8"
                        Padding="20" 
                        Margin="0,0,0,15"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="작성자: " 
                                   FontSize="13"
                                   Foreground="#6C757D"
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                   x:Name="AuthorText" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#2D3436"
                                   VerticalAlignment="Center"
                                   Margin="5,0,20,0"/>
                        
                        <TextBlock Grid.Column="2" 
                                   Text="작성일: " 
                                   FontSize="13"
                                   Foreground="#6C757D"
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" 
                                   x:Name="DateText" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#2D3436"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0"/>
                    </Grid>
                </Border>
                
                <!-- 본문 내용 -->
                <Border Background="White" 
                        CornerRadius="8"
                        Padding="20" 
                        MinHeight="300"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="내용" 
                                       FontSize="12"
                                       Foreground="#6C757D"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <Button x:Name="ToggleViewButton"
                                    Content="🌐 브라우저에서 보기"
                                    Margin="10,0,0,0"
                                    Padding="8,4"
                                    FontSize="11"
                                    Background="#6C5CE7"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="ToggleView_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="3"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D0D0D0"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="ContentText" 
                                     FontSize="14"
                                     Foreground="#2D3436"
                                     TextWrapping="Wrap"
                                     IsReadOnly="True"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     AcceptsReturn="True"
                                     MinHeight="300"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 하단 버튼 영역 -->
        <Border Grid.Row="2" 
                Background="White"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- URL 표시 -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="🔗 " 
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="UrlText" 
                               Text="URL" 
                               FontSize="12"
                               Foreground="#6C757D"
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="500"/>
                </StackPanel>
                
                <!-- 닫기 버튼 -->
                <Button Grid.Column="1" 
                        Content="닫기" 
                        Width="100" 
                        Height="40"
                        Background="#DFE6E9"
                        Foreground="#2D3436"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#B2BEC3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</ui:FluentWindow>

