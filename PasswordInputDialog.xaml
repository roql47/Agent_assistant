<Window x:Class="AgentAssistant.PasswordInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="부서 비밀번호" 
        Height="350" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">
    
    <StackPanel Background="White">
        <!-- 헤더 -->
        <Border Background="#6C5CE7" Padding="20,15">
            <StackPanel>
                <TextBlock Text="🔒 부서 접근 권한" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>
                <TextBlock x:Name="DepartmentNameText" 
                           Foreground="White" 
                           FontSize="13"
                           Text="부서: "/>
            </StackPanel>
        </Border>
        
        <!-- 내용 -->
        <StackPanel Margin="25,25,25,25">
            <TextBlock Text="이 부서는 비밀번호로 보호되고 있습니다." 
                       FontSize="12" 
                       Foreground="#666"
                       Margin="0,0,0,15"/>
            
            <TextBlock Text="비밀번호" 
                       FontWeight="Bold" 
                       FontSize="12"
                       Margin="0,0,0,6"/>
            
            <PasswordBox x:Name="PasswordBox"
                         Height="40"
                         FontSize="14"
                         PasswordChar="●"
                         VerticalContentAlignment="Center"
                         Padding="8"
                         KeyDown="PasswordBox_KeyDown"/>
            
            <TextBlock Text="💡 Enter 키 또는 확인 버튼 클릭" 
                       FontSize="10" 
                       Foreground="#999"
                       Margin="2,10,0,0"/>
        </StackPanel>
        
        <!-- 버튼 -->
        <Border Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="0,1,0,0" Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="확인" 
                        Width="80"
                        Height="35"
                        Background="#00B894" 
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="12"
                        Margin="0,0,8,0"
                        BorderThickness="0"
                        Click="OkButton_Click"
                        IsDefault="True"/>
                <Button Content="취소" 
                        Width="80"
                        Height="35"
                        Background="#95A5A6" 
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="12"
                        BorderThickness="0"
                        Click="CancelButton_Click"
                        IsCancel="True"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
