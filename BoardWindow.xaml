<ui:FluentWindow x:Class="AgentAssistant.BoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="공지사항 목록" 
        Height="650" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 헤더 -->
        <Border Grid.Row="0" 
                Background="#6C5CE7" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="📋 공지사항 목록" 
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock x:Name="BoardInfoText"
                               Text="총 0개의 공지사항"
                               FontSize="12"
                               Foreground="#E0E0E0"
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Content="🔄 새로고침"
                        Background="#5F4FD1"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,8"
                        FontSize="13"
                        Cursor="Hand"
                        Click="Refresh_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4F3FC1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- 게시글 목록 -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="20">
            <ItemsControl x:Name="BoardList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                Padding="15" 
                                CornerRadius="8"
                                Margin="0,0,0,10"
                                BorderThickness="1"
                                BorderBrush="#E0E0E0">
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="📅 일정에 추가" Click="AddToCalendar_Click" Tag="{Binding}">
                                        <MenuItem.Icon>
                                            <TextBlock Text="📅" FontSize="14"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </Border.ContextMenu>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F8F9FA"/>
                                            <Setter Property="BorderBrush" Value="#6C5CE7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 번호 -->
                                <Border Grid.Column="0"
                                        Background="#6C5CE7"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        Margin="0,0,15,0"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Number}" 
                                               Foreground="White"
                                               FontWeight="Bold"
                                               FontSize="12"/>
                                </Border>
                                
                                <!-- 제목 (복사 가능) -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBox Text="{Binding Title, Mode=OneWay}" 
                                             FontSize="14"
                                             FontWeight="SemiBold"
                                             Foreground="#2D3436"
                                             TextWrapping="Wrap"
                                             IsReadOnly="True"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Cursor="IBeam"
                                             Padding="0"/>
                                </StackPanel>
                                
                                <!-- 작성자 -->
                                <TextBlock Grid.Column="2" 
                                           Text="{Binding Author}" 
                                           FontSize="12"
                                           Foreground="#6C757D"
                                           VerticalAlignment="Center"
                                           Margin="15,0"/>
                                
                                <!-- 날짜 -->
                                <TextBlock Grid.Column="3" 
                                           Text="{Binding Date}" 
                                           FontSize="12"
                                           Foreground="#6C757D"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- 하단 페이지네이션 & 버튼 -->
        <Border Grid.Row="2" 
                Background="White"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 페이지네이션 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="◀ 이전" Width="80" Height="35" Margin="0,0,10,0"
                            Background="#6C5CE7" Foreground="White" BorderThickness="0"
                            Click="PrevPage_Click" x:Name="PrevPageButton">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <TextBlock x:Name="PageInfoText" Text="1 / 1 페이지" 
                               FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <Button Content="다음 ▶" Width="80" Height="35"
                            Background="#6C5CE7" Foreground="White" BorderThickness="0"
                            Click="NextPage_Click" x:Name="NextPageButton">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                
                <!-- 닫기 버튼 -->
                <Button Grid.Column="1" Content="닫기" 
                        Width="100" 
                        Height="40"
                        Background="#DFE6E9"
                        Foreground="#2D3436"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#B2BEC3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</ui:FluentWindow>


